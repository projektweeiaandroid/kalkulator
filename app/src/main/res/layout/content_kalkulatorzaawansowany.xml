<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent" >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView3"
        />

    <Button

        android:id="@+id/button_7"

        android:layout_width="70dp"

        android:layout_height="60dp"

        android:layout_below="@+id/textView3"

        android:text="7"



        />

    <Button

        android:id="@+id/button_8"

        android:layout_width="70dp"

        android:layout_height="60dp"

        android:layout_below="@+id/textView3"

        android:layout_toRightOf="@id/button_7"

        android:text="8"



        />

    <Button

        android:id="@+id/button_9"

        android:layout_width="70dp"

        android:layout_height="60dp"

        android:layout_below="@+id/textView3"

        android:layout_toRightOf="@id/button_8"

        android:text="9"



        />

    <Button

        android:id="@+id/button_0"

        android:layout_width="90dp"

        android:layout_height="60dp"

        android:layout_below="@+id/textView3"

        android:layout_toRightOf="@id/button_9"

        android:text="0"



        />

    <Button

        android:id="@+id/button_4"

        android:layout_width="70dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_7"

        android:text="4"



        /> <Button

    android:id="@+id/button_5"

    android:layout_width="70dp"

    android:layout_height="60dp"

    android:layout_below="@id/button_8"

    android:layout_toRightOf="@id/button_4"

    android:text="5"



    /> <Button

    android:id="@+id/button_6"

    android:layout_width="70dp"

    android:layout_height="60dp"

    android:layout_below="@id/button_9"

    android:layout_toRightOf="@id/button_5"

    android:text="6"



    />

    <Button

        android:id="@+id/button_10"

        android:layout_width="90dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_0"

        android:layout_toRightOf="@id/button_6"

        android:text="+"



        />

    <Button

        android:id="@+id/button_1"

        android:layout_width="70dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_4"

        android:text="1"



        /> <Button

    android:id="@+id/button_2"

    android:layout_width="70dp"

    android:layout_height="60dp"

    android:layout_below="@id/button_5"

    android:layout_toRightOf="@id/button_1"

    android:text="2"



    /> <Button

    android:id="@+id/button_3"

    android:layout_width="70dp"

    android:layout_height="60dp"

    android:layout_below="@id/button_6"

    android:layout_toRightOf="@id/button_2"

    android:text="3"



    />

    <Button

        android:id="@+id/button_11"

        android:layout_width="90dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_10"

        android:layout_toRightOf="@id/button_3"

        android:text="-"





        />



    <Button

        android:id="@+id/button_14"

        android:layout_width="110dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_1"

        android:text="="



        />

    <Button

        android:id="@+id/button_12"

        android:layout_width="90dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_1"

        android:layout_toRightOf="@id/button_14"

        android:text="/"





        />

    <Button

        android:id="@+id/button_13"

        android:layout_width="90dp"

        android:layout_height="60dp"

        android:layout_below="@id/button_11"

        android:layout_toRightOf="@id/button_12"

        android:text="*"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator zaawansowany"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button_14"
        android:layout_centerHorizontal="true" />

</RelativeLayout>